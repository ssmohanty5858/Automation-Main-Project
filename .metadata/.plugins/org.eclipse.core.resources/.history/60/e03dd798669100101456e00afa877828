    public void testingDesignCreation() throws InterruptedException, IOException
    {
    	Thread.sleep(1000);
    	System.out.println("Hi I am in testingDesignCreation Method xxxxxxxxxxxxxxxxxxxxxx");
    	Path csvPath=Paths.get(System.getProperty("user.dir"), "./Configuration/DesignCoordinates.csv");
    	try (BufferedReader br = Files.newBufferedReader(csvPath, StandardCharsets.UTF_8)) {
            String line;
            int lineNo = 0;
            
            while ((line = br.readLine()) != null) {
                lineNo++;
                line = line.trim();

                // Skip empty lines and comment lines (optional)
                if (line.isEmpty() || line.startsWith("#") || line.startsWith("//")) {
                    continue;
                }
                System.out.println("Total Line count = "+lineNo);
                
                // Split on semicolon; keep trailing empty tokens; trim around semicolons
                String[] tokens = line.split("\\s*;\\s*", -1);
                System.out.println("Total token count = "+tokens.length);
                for (int col = 0; col < tokens.length; col++) {
                    String rawToken = tokens[col];
                    String token = rawToken == null ? "" : rawToken.trim();
                    if (token.isEmpty()) {
                        // No-op for blank cells, but you could log if wanted
                        continue;
                    }

                    // If you want, you can normalize case or spaces here.
                    // Example: token = token.replaceAll("\\s+", " ").trim();

                    System.out.println("Line: "+ lineNo +" - "+ col + 1 +" - ColValue:"+ token);

                    switch (token) {
                        case "Vertical Mullion":
                        	
                            String designButtonName=tokens[0];
                            System.out.println(designButtonName);                           
                            
	                    	int dropX = expression.ExpressionSolver(tokens[2], canvasEndX,canvasEndY);
	                    	int dropY = expression.ExpressionSolver(tokens[3], canvasEndX,canvasEndY);
	                    	
	                    	//Drag the vertical mullion in the bottom
	                    	mullionDragFirstToCanvas(1, dropX, dropY);
                            
	                    	System.out.println("Button= " + token + "DropX=" + dropX + "DropY=" + dropY);
	                    	
                            break;

                        case "Confirm":
                            // TODO: Select Horizontal Mullion option
                            break;

                        // === Example: tokens that look like numbers or expressions ===
                        default:
                            // If you expect patterns like "W/3", "H*0.25", "150", etc.,
                            // you can handle them with simple checks/regex before or here:

                            if (token.matches("(?i)W\\s*/\\s*\\d+")) {
                                // TODO: Handle W/n (e.g., W/3)
                                // Parse divisor and compute target X
                                // String d = token.replaceAll("(?i)W\\s*/\\s*(\\d+)", "$1");
                                // int divisor = Integer.parseInt(d);
                                // ...
                                break;
                            }

                            if (token.matches("(?i)H\\s*/\\s*\\d+")) {
                                // TODO: Handle H/n (e.g., H/3)
                                break;
                            }

                            if (token.matches("\\d+(?:\\.\\d+)?")) {
                                // TODO: Handle raw numeric value (pixels, mm, etc., as per your app)
                                // double value = Double.parseDouble(token);
                                break;
                            }

                            // If nothing matched, log and continue
                            System.out.printf("Unrecognized token at line %d col %d: '%s'%n", lineNo, col + 1, token);
                            // Optionally throw if unrecognized should fail the run:
                            // throw new IllegalArgumentException("Unknown token: " + token);
                            break;
                    } // end switch
                } // end for tokens
            } // end while lines
        }
    	
    	//couplerDragFirstToCanvas(1,0,0);
    	
       	//Top : 2 track 2 panel 
//   	 	int dropX = 0;
//   	 	int dropY = (canvasEndY * 3/4);
//	 	dragFromSection("sliding designs", 0, dropX, dropY);
//	 	Thread.sleep(2000);
    	
    	
	   	//bottom : 2 track 2 panel 
//   	 	dropX = 0;
//   	 	dropY = 0;
//	 	dragFromSection("sliding designs", 0, dropX, dropY);
	 	Thread.sleep(2000);
    }
