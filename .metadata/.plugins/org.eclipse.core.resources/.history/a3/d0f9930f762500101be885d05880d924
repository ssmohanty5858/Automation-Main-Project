	@FindBy(xpath="(//div[@class='cell grid-cell c-pointer bg-color-1 font-size-12 color-2 d-flex align-items-center justify-content-center border-bottom-2 border-right-2'])[5]")
	private WebElement selectdate;
	
	@FindBy(xpath="(//input[@type='text'])[1]")
	private WebElement shiftnametextfield;
	
	@FindBy(xpath="//input[@id='allDay']")
	private WebElement alldaycheckbox;
	
	@FindBy(xpath="(//input[@type='text'])[4]")
	private WebElement productionexecutivedropdown;
	
	@FindBy(xpath=" //a[contains(text(),'SSM894 Automation894 Jul 25 2024')]")
	private WebElement selectexecutive;
	
	@FindBy(xpath="(//input[@type='text'])[5]")
	private WebElement cutstextfield;
	
	@FindBy(xpath="(//input[@type='text'])[6]")
	private WebElement weldstextfield;
	
	@FindBy(xpath="(//input[@type='text'])[7]")
	private WebElement finishedgoodstextfield;
	
	@FindBy(xpath="(//div[@class='body'])[3]")
	private WebElement addorderstab;
	
	@FindBy(xpath="//app-lazy-multiselect[@formcontrolname='workOrderId']")
	private WebElement workorderdropdown;
	
	@FindBy(xpath="(//a[@class='dropdown-item c-pointer'])[5]")
	private WebElement selectworkorders;
	
	@FindBy(xpath="//button[contains(text(),'Download')]")
	private WebElement downloadbutton;
	
	@FindBy(xpath="(//input[@class='form-control search_items'])[1]")
	private WebElement selectstartdate;
	
	@FindBy(xpath="//span[.='15']")
	private WebElement fifteendate;
	
	@FindBy(xpath="(//input[@class='form-control search_items'])[2]")
	private WebElement selectenddate;
	
	@FindBy(xpath="//span[.='27']")
	private WebElement seventeendate;
	
	@FindBy(xpath="(//button[contains(text(),'Download')])[2]")
	private WebElement downloadreportbutton;
	
	public void planningSchedule()
	{
		planningscheduletab.click();
		selectdate.click();
		shiftnametextfield.sendKeys("SSM Automation" +rdmnumber+ formattedDate );
		alldaycheckbox.click();
		productionexecutivedropdown.click();
		selectexecutive.click();
		cutstextfield.sendKeys("1500");
		weldstextfield.sendKeys("1500");
		finishedgoodstextfield.sendKeys("1500");
		savebutton.click();
		addorderstab.click();
		workorderdropdown.click();
		selectworkorders.click();
		downloadbutton.click();
		selectstartdate.click();
		fifteendate.click();
		selectenddate.click();
		seventeendate.click();
		downloadreportbutton.click();
	}
	
	@FindBy(xpath="//a[@data-bs-target='#allocated']")
	private WebElement allocatedtab;
	
	@FindBy(xpath="//input[@id='activeAll']")
	private WebElement checkbox;
	
	@FindBy(xpath="//button[contains(text(),'New work order')]")
	private WebElement neworkordertab;
	
	@FindBy(xpath="//button[.='Create and allocate']")
	private WebElement createandallocatebutton;
	
	
	public void newsalesorderpage()
	{
		approvedviewbutton.click();
		allocatedtab.click();
		checkbox.click();
		neworkordertab.click();
		workordernametextfield.sendKeys("SSM Automation" +rdmnumber + formattedDate);
		factorydd.click();
		bhubaneswarfactory.click();
		createandallocatebutton.click();	
	}
